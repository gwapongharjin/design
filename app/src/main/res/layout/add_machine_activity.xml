<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".AddMachineActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutMachine1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="Select Machine Type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/spinMachineType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                android:entries="@array/machine_types_sugarcane"
                app:layout_constraintEnd_toEndOf="@+id/btnScanQRCodeMach"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <Spinner
                android:id="@+id/spinRespondentName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_spinner"
                android:entries="@array/blank"
                app:layout_constraintEnd_toEndOf="@+id/spinMachineType"
                app:layout_constraintStart_toStartOf="@+id/spinMachineType"
                app:layout_constraintTop_toBottomOf="@id/spinMachineType" />

            <EditText
                android:id="@+id/edtQRCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="QR CODE"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@id/spinRespondentName" />

            <ImageButton
                android:id="@+id/btnScanQRCodeMach"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/custom_image_button"
                app:layout_constraintBottom_toBottomOf="@+id/edtQRCode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toEndOf="@+id/edtQRCode"
                app:layout_constraintTop_toTopOf="@+id/edtQRCode"
                app:srcCompat="@drawable/ic_outline_center_focus_strong_24" />

            <Button
                android:id="@+id/btnSaveNewMachine"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/custom_button"
                android:text="SAVE"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTypeMill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Type of Mill"
                app:layout_constraintStart_toStartOf="@+id/edtQRCode"
                app:layout_constraintTop_toBottomOf="@+id/edtQRCode" />

            <Spinner
                android:id="@+id/spinTypeMill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                android:entries="@array/type_of_mill"
                app:layout_constraintEnd_toEndOf="@+id/edtQRCode"
                app:layout_constraintStart_toStartOf="@+id/spinMachineType"
                app:layout_constraintTop_toBottomOf="@+id/tvTypeMill" />

            <TextView
                android:id="@+id/tvTypeOfTubewells"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Type of Tubewells"
                app:layout_constraintStart_toStartOf="@+id/tvTypeMill"
                app:layout_constraintTop_toBottomOf="@+id/edtQRCode" />

            <Spinner
                android:id="@+id/spinTypeOfTubewells"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                android:entries="@array/type_of_tubewells"
                app:layout_constraintEnd_toEndOf="@+id/spinTypeMill"
                app:layout_constraintStart_toStartOf="@+id/spinTypeMill"
                app:layout_constraintTop_toBottomOf="@+id/tvTypeOfTubewells" />

            <TextView
                android:id="@+id/tvBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Brand"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/spinTypeOfTubewells" />

            <Spinner
                android:id="@+id/spinBrand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                android:entries="@array/all_machine_brands"
                app:layout_constraintEnd_toEndOf="@+id/edtQRCode"
                app:layout_constraintStart_toStartOf="@+id/spinMachineType"
                app:layout_constraintTop_toBottomOf="@+id/tvBrand" />

            <EditText
                android:id="@+id/edtOtherBrand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="Specify Brand"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/spinBrand"
                app:layout_constraintStart_toStartOf="@+id/spinBrand"
                app:layout_constraintTop_toBottomOf="@+id/spinBrand" />

            <TextView
                android:id="@+id/tvModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Model"
                app:layout_constraintStart_toStartOf="@+id/tvBrand"
                app:layout_constraintTop_toBottomOf="@+id/spinBrand" />

            <Spinner
                android:id="@+id/spinModel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                android:entries="@array/all_models_machines"
                app:layout_constraintEnd_toEndOf="@+id/spinBrand"
                app:layout_constraintStart_toStartOf="@+id/spinBrand"
                app:layout_constraintTop_toBottomOf="@+id/tvModel" />

            <EditText
                android:id="@+id/edtOtherModel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="Specify Model"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/spinBrand"
                app:layout_constraintStart_toStartOf="@+id/spinBrand"
                app:layout_constraintTop_toBottomOf="@+id/spinModel" />

            <EditText
                android:id="@+id/edtRatedPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="Rated power (in hP)"
                android:inputType="number"
                app:layout_constraintStart_toStartOf="@+id/edtQRCode"
                app:layout_constraintTop_toBottomOf="@+id/spinModel" />

            <EditText
                android:id="@+id/edtServiceArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_edit_text"
                android:hint="Service Area (in Ha)"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="@+id/edtRatedPower"
                app:layout_constraintStart_toStartOf="@+id/edtRatedPower"
                app:layout_constraintTop_toBottomOf="@+id/edtRatedPower" />

            <EditText
                android:id="@+id/edtAverageOperatingHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="Average Operating Hours"
                android:inputType="numberDecimal"
                app:layout_constraintStart_toStartOf="@+id/edtRatedPower"
                app:layout_constraintTop_toBottomOf="@+id/edtServiceArea" />

            <TextView
                android:id="@+id/tvSubInputHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Input in Hours per Day"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/edtAverageOperatingHours"
                app:layout_constraintTop_toBottomOf="@+id/edtAverageOperatingHours" />

            <EditText
                android:id="@+id/edtAverageOperatingDays"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="Average Operating Days"
                android:inputType="number"
                app:layout_constraintStart_toStartOf="@+id/edtAverageOperatingHours"
                app:layout_constraintTop_toBottomOf="@+id/tvSubInputHours" />

            <TextView
                android:id="@+id/tvSubInputDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Input in Days per Season"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tvSubInputHours"
                app:layout_constraintTop_toBottomOf="@+id/edtAverageOperatingDays" />

            <EditText
                android:id="@+id/edtCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="Capacity (ha/h)"
                android:inputType="number"
                app:layout_constraintStart_toStartOf="@+id/edtAverageOperatingDays"
                app:layout_constraintTop_toBottomOf="@+id/tvSubInputDays" />

            <EditText
                android:id="@+id/edtAveYield"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="Average Yield (in ton cannes/ha)"
                android:inputType="number"
                app:layout_constraintStart_toStartOf="@+id/edtCapacity"
                app:layout_constraintTop_toBottomOf="@+id/edtCapacity" />

            <EditText
                android:id="@+id/edtNumberOfLoads"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="Number of Loads (in loads/ha)"
                android:inputType="number"
                app:layout_constraintEnd_toStartOf="@+id/btnScanQRCodeMach"
                app:layout_constraintStart_toStartOf="@+id/edtAveYield"
                app:layout_constraintTop_toBottomOf="@+id/edtAveYield" />

            <EditText
                android:id="@+id/edtRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintStart_toStartOf="@+id/edtNumberOfLoads"
                app:layout_constraintTop_toBottomOf="@+id/edtNumberOfLoads" />

            <TextView
                android:id="@+id/tvOwnership"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Type of Ownership"
                app:layout_constraintStart_toStartOf="@+id/tvModel"
                app:layout_constraintTop_toBottomOf="@+id/edtRate" />

            <Spinner
                android:id="@+id/spinOwnership"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                android:entries="@array/ownership_of_machine"
                app:layout_constraintEnd_toEndOf="@+id/spinMachineType"
                app:layout_constraintStart_toStartOf="@+id/spinModel"
                app:layout_constraintTop_toBottomOf="@+id/tvOwnership" />

            <Spinner
                android:id="@+id/spinPurchGrantDono"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                android:entries="@array/purchasing_method"
                app:layout_constraintEnd_toEndOf="@+id/spinOwnership"
                app:layout_constraintStart_toStartOf="@+id/spinOwnership"
                app:layout_constraintTop_toBottomOf="@+id/spinOwnership" />

            <Spinner
                android:id="@+id/spinAgency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                android:entries="@array/agency"
                app:layout_constraintEnd_toEndOf="@+id/spinOwnership"
                app:layout_constraintStart_toStartOf="@+id/spinOwnership"
                app:layout_constraintTop_toBottomOf="@+id/spinPurchGrantDono" />

            <EditText
                android:id="@+id/edtOtherAgency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="Specify Agency"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/spinBrand"
                app:layout_constraintStart_toStartOf="@+id/spinBrand"
                app:layout_constraintTop_toBottomOf="@+id/spinAgency" />

            <EditText
                android:id="@+id/edtNameOfOwnerOrOrganization"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="Name of Owner/Organization"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="@+id/edtCapacity"
                app:layout_constraintTop_toBottomOf="@+id/spinOwnership" />

            <TextView
                android:id="@+id/tvYearAvquired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Year Acquired"
                app:layout_constraintStart_toStartOf="@+id/tvOwnership"
                app:layout_constraintTop_toBottomOf="@+id/edtNameOfOwnerOrOrganization" />

            <Spinner
                android:id="@+id/spinYearAcquired"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                app:layout_constraintEnd_toEndOf="@+id/tvOwnership"
                app:layout_constraintStart_toStartOf="@+id/spinPurchGrantDono"
                app:layout_constraintTop_toBottomOf="@+id/tvYearAvquired" />

            <TextView
                android:id="@+id/tvConditionAcquired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Condition when Aquired"
                app:layout_constraintStart_toStartOf="@+id/tvOwnership"
                app:layout_constraintTop_toBottomOf="@+id/spinYearAcquired" />

            <Spinner
                android:id="@+id/spinConditionAcquired"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                android:entries="@array/condition_when_bought"
                app:layout_constraintEnd_toEndOf="@+id/spinAgency"
                app:layout_constraintStart_toStartOf="@+id/spinAgency"
                app:layout_constraintTop_toBottomOf="@+id/tvConditionAcquired" />

            <TextView
                android:id="@+id/tvForRent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Is this Machine for Rent?"
                app:layout_constraintStart_toStartOf="@+id/tvConditionAcquired"
                app:layout_constraintTop_toBottomOf="@id/spinConditionAcquired" />

            <Spinner
                android:id="@+id/spinRental"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                android:entries="@array/yes_no"
                app:layout_constraintEnd_toEndOf="@+id/spinConditionAcquired"
                app:layout_constraintStart_toStartOf="@+id/spinConditionAcquired"
                app:layout_constraintTop_toBottomOf="@+id/tvForRent" />

            <EditText
                android:id="@+id/edtCustomRate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="Custom Rate"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@+id/spinCustomUnit"
                app:layout_constraintEnd_toStartOf="@+id/spinCustomUnit"
                app:layout_constraintStart_toStartOf="@+id/spinRental"
                app:layout_constraintTop_toBottomOf="@+id/spinRental" />

            <Spinner
                android:id="@+id/spinCustomUnit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                android:entries="@array/custom_rate_units"
                app:layout_constraintEnd_toEndOf="@+id/spinRental"
                app:layout_constraintTop_toBottomOf="@+id/spinRental" />

            <EditText
                android:id="@+id/edtCustomRateUnit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="Specify Unit of Custom Rate"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/spinRental"
                app:layout_constraintStart_toStartOf="@+id/edtCustomRate"
                app:layout_constraintTop_toBottomOf="@+id/spinCustomUnit" />

            <TextView
                android:id="@+id/tvMachineAvailability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Machine Availability"
                app:layout_constraintStart_toStartOf="@+id/tvForRent"
                app:layout_constraintTop_toBottomOf="@+id/spinRental" />

            <Spinner
                android:id="@+id/spinAvailability"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                android:entries="@array/rent_availablity"
                app:layout_constraintEnd_toEndOf="@+id/spinRental"
                app:layout_constraintStart_toStartOf="@+id/edtCustomRateUnit"
                app:layout_constraintTop_toBottomOf="@+id/tvMachineAvailability" />

            <!--
            <Spinner
                android:id="@+id/spinRentProvince"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_spinner"
                android:entries="@array/provinces"
                app:layout_constraintEnd_toEndOf="@+id/spinAvailability"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/spinAvailability"
                app:layout_constraintTop_toBottomOf="@id/spinAvailability" />
                -->


            <EditText
                android:id="@+id/edtRentProv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="Province"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/spinAvailability"
                app:layout_constraintStart_toStartOf="@+id/spinAvailability"
                app:layout_constraintTop_toBottomOf="@+id/spinAvailability" />

            <!--
            <Spinner
                android:id="@+id/spinRentMunicipality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                app:layout_constraintEnd_toEndOf="@+id/spinRentProvince"
                app:layout_constraintStart_toStartOf="@+id/spinRentProvince"
                app:layout_constraintTop_toBottomOf="@id/spinRentProvince" />
                -->


            <EditText
                android:id="@+id/edtRentMun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="Municipality"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/spinAvailability"
                app:layout_constraintStart_toStartOf="@+id/spinAvailability"
                app:layout_constraintTop_toBottomOf="@id/edtRentProv" />
            <!--
            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/multispinRentBrgy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                app:layout_constraintEnd_toEndOf="@+id/spinRentMunicipality"
                app:layout_constraintStart_toStartOf="@+id/spinRentMunicipality"
                app:layout_constraintTop_toBottomOf="@id/spinRentMunicipality" />
                 -->


            <EditText
                android:id="@+id/edtRentBrgy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="Barangay/s"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/spinAvailability"
                app:layout_constraintStart_toStartOf="@+id/spinAvailability"
                app:layout_constraintTop_toBottomOf="@id/edtRentMun" />

            <TextView
                android:id="@+id/tvCommas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Separate Barangays by commas (,)"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="@id/edtRentBrgy"
                app:layout_constraintTop_toBottomOf="@id/edtRentBrgy" />

            <TextView
                android:id="@+id/tvConditionPresent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Present Condition"
                app:layout_constraintStart_toStartOf="@+id/tvMachineAvailability"
                app:layout_constraintTop_toBottomOf="@+id/spinAvailability" />

            <Spinner
                android:id="@+id/spinConditionPresent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                android:entries="@array/condition"
                app:layout_constraintEnd_toEndOf="@+id/spinConditionAcquired"
                app:layout_constraintStart_toStartOf="@+id/spinConditionAcquired"
                app:layout_constraintTop_toBottomOf="@+id/tvConditionPresent" />


            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/multspinProblemsUnused"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_spinner"
                app:hintText="Multi Item Selection"
                app:layout_constraintEnd_toEndOf="@+id/spinConditionPresent"
                app:layout_constraintStart_toStartOf="@+id/spinConditionPresent"
                app:layout_constraintTop_toBottomOf="@+id/spinConditionPresent" />

            <EditText
                android:id="@+id/edtOtherProblems"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:hint="Specify Problems"
                android:inputType="textMultiLine"
                android:maxLength="2000"
                android:maxLines="2"
                app:layout_constraintEnd_toEndOf="@id/spinAvailability"
                app:layout_constraintStart_toStartOf="@id/spinAvailability"
                app:layout_constraintTop_toBottomOf="@id/multspinProblemsUnused" />

            <TextView
                android:id="@+id/tvLocationOfMachine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Location"
                app:layout_constraintStart_toStartOf="@+id/tvConditionPresent"
                app:layout_constraintTop_toBottomOf="@+id/spinConditionPresent" />

            <Spinner
                android:id="@+id/spinLocationOfMachine"
                android:layout_width="0dp"
