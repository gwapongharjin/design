<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".implementfragments.DitcherFragment">

    <EditText
        android:id="@+id/edtTotalServiceAreaImpDitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Total Service Area"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="In hectares (ha)"
        app:layout_constraintStart_toStartOf="@+id/edtTotalServiceAreaImpDitcher"
        app:layout_constraintTop_toBottomOf="@+id/edtTotalServiceAreaImpDitcher" />

    <EditText
        android:id="@+id/edtHoursPDayImpDitcher"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Average Operating Hours"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/edtTotalServiceAreaImpDitcher"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="In Hours per Day"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/edtHoursPDayImpDitcher" />

    <EditText
        android:id="@+id/edtDaysPSeasonImpFert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Average Operating Days"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/edtHoursPDayImpDitcher"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="In Days Per Season"
        app:layout_constraintStart_toStartOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/edtDaysPSeasonImpFert" />

    <EditText
        android:id="@+id/edtDepthOfCutImpDitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Depth of Cut"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/edtDaysPSeasonImpFert"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="In centimeters (cm)"
        app:layout_constraintStart_toStartOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/edtDepthOfCutImpDitcher" />

</androidx.constraintlayout.widget.ConstraintLayout>