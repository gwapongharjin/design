<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_goneMarginStart="8dp"
    android:layout_marginTop="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMachineCodeitemC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="R06ILOM00001"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#0D47A1"
            app:layout_constraintBottom_toTopOf="@+id/tvLatLongitemC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvMachineTypeitemC"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMachineTypeitemC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tvMachineCodeitemC"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="COMBINE-HARVESTER"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toStartOf="@+id/tvMachineCodeitemC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLatLongitemC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMachineCodeitemC"
            android:layout_toEndOf="@id/tvMachineTypeitemC"
            android:maxLines="1"
            android:text="LatLong"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvMachineTypeitemC"
            app:layout_constraintTop_toBottomOf="@+id/tvMachineTypeitemC" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>